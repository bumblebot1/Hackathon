{
  "manifest_version": 2,
  "name": "Test",
  "description": "Replacing ads with environment data.",
  "author" : "Code4Pizza",
  "version": "1.0.0",
  "icons": {
    "32" : "images/icon.png",
    "64" : "images/icon64.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "notifications",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "file:///*/*"
  ],
  "web_accessible_resources" : ["images/*", "page/index.html", "page/script.js"],
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*", "file:///*/*"],
        "js": ["js/lib/jquery-3.1.1.min.js", "js/lib/q.js", "js/lib/ramda.min.js", "js/adReplacer.js", "js/document_end.js", "/js/lib/d3.min.js", "page/script.js"],
        "run_at": "document_end",
        "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": ["js/lib/jquery-3.1.1.min.js", "js/lib/q.js", "js/lib/ramda.min.js", "js/adReplacer.js", "js/main.js"]
  }
}
